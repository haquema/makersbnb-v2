<form action="/properties/new" method="POST">
        <label for="name">Property Name:</label>
        <input type="text" name="name" required><br>
        <label for="description">Description:</label>
        <textarea name="description" rows="10" cols="30">Describe your property here
        </textarea><br>
        <label for="price">Price: (omit the starting 0)</label>
        <input type="number" name="price" required><br>
        <label for="to_rent">Available:</label>
        <select id="to_rent" name="to_rent" required><br>
          <option value="true">Yes</option>
          <option value="false">No</option>
        </select>
        <input type="submit" value="Signup">
      </form>